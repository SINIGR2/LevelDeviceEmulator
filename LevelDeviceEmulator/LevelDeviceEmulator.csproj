<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
        <Folder Include="Listeners\"/>
        <Folder Include="Proto\src"/>
        <Folder Include="Proto\gen\"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Google.Protobuf" Version="3.25.3"/>
        <PackageReference Include="Google.Protobuf.Tools" Version="3.25.3"/>
    </ItemGroup>

    <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
        <Exec Command="$(ProjectDir)Proto\Protoc\protoc.exe -I=$(ProjectDir)Proto\src --csharp_out=$(ProjectDir)Proto\gen $(ProjectDir)Proto\src\TcpProtocol.proto"/>
    </Target>

</Project>
